<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shadow-->
    <item >
        <shape android:shape="rectangle">
        <corners android:bottomLeftRadius="2dp"/>
        <gradient android:startColor="@color/start_gray"
            android:endColor="@color/end_gray"
            android:angle="-90"/>
        </shape>
    </item>

    <item android:bottom="2px">
        <shape android:shape="rectangle">

            <solid android:color="@color/white"/>
            <size android:height="45dp" android:width="20dp"/>
        </shape>
    </item>
</layer-list>