<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/user_drawer_height">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:background="@drawable/avatar_background"/>

    <!-- User Image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/drawer_user"
        android:layout_width="@dimen/user_drawer_image_width"
        android:layout_height="@dimen/user_drawer_image_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:contentDescription="@string/drawer_icon"
        android:src="@drawable/circle"/>

    <!-- User Name -->
    <com.walkntrade.views.LightTextView
        android:id="@+id/drawer_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/drawer_user"
        android:layout_toRightOf="@id/drawer_user"
        android:background="#8CFFFFFF"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:textSize="16sp"
        android:visibility="gone" />

    <!-- User Login Button-->
    <Button
        android:id="@+id/drawer_login"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="30dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/drawer_user"
        android:layout_toRightOf="@id/drawer_user"
        android:background="@drawable/grid_selector_post"
        android:text="@string/sign_in"
        android:textSize="16sp"/>

</RelativeLayout>
