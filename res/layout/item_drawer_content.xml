<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingTop="4dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="4dp">

    <!-- Icon in Navigation Drawer -->
    <ImageView
        android:id="@+id/drawer_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/drawer_icon"/>
    
    <!-- Available option -->
    <com.walkntrade.views.LightTextView
        android:id="@+id/drawer_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/drawer_icon"
        android:layout_toEndOf="@id/drawer_icon"
        android:layout_marginTop="12dp"
        android:textSize="14sp"/>

    <!-- Counter -->
    <TextView
        android:id="@+id/counter"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/square_counter"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:gravity="center"/>
    
</RelativeLayout>
