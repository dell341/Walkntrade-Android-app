<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:background="@drawable/list_selector_2">

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"/>

    <ImageView
        android:id="@+id/renew_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="3dp"
        android:layout_marginEnd="3dp"
        android:visibility="invisible"
        android:src="@drawable/ic_action_refresh"
        android:background="@drawable/gray_on_click"/>

    <!-- Title of Post-->
    <TextView
        android:id="@+id/content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/checkBox"
        android:layout_toEndOf="@id/checkBox"
        android:layout_toLeftOf="@id/renew_post"
        android:layout_toStartOf="@id/renew_post"
        android:layout_centerVertical="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:focusable="false"
        android:clickable="false"
        android:textSize="@dimen/school_post_size"
        android:textColor="@android:color/black"/>

</RelativeLayout>