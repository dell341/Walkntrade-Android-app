<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".Show_Page" >

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_alignParentTop="true"
            android:visibility="invisible"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_below="@id/progressBar">

            <TextView
                android:id="@+id/show_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:typeface="sans"
                android:textSize="@dimen/title_size"
                android:text="@string/show_title"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/show_post_image"
                android:layout_width="@dimen/image_size_main"
                android:layout_height="@dimen/image_size_main"
                android:layout_below="@id/show_post_title"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/post_image"
                android:src="@drawable/post_image"/>

            <TextView
                android:id="@+id/show_post_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/show_post_image"
                android:textSize="@dimen/price_size"
                android:textStyle="bold"
                android:text="@string/show_price"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/show_post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/show_post_price"
                android:textSize="@dimen/show_page_text"
                android:text="@string/show_date"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/show_post_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/show_post_price"
                android:layout_toRightOf="@id/show_post_date"
                android:textSize="@dimen/show_page_text"
                android:text="@string/show_user"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/show_post_image_2"
                android:layout_width="@dimen/image_size_sub"
                android:layout_height="@dimen/image_size_sub"
                android:layout_below="@id/show_post_title"
                android:layout_toRightOf="@id/show_post_image"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/post_image"
                android:visibility="invisible"
                android:src="@drawable/selector" />

            <ImageView
                android:id="@+id/show_post_image_3"
                android:layout_width="@dimen/image_size_sub"
                android:layout_height="@dimen/image_size_sub"
                android:layout_below="@id/show_post_image_2"
                android:layout_toRightOf="@id/show_post_image"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/post_image"
                android:visibility="invisible"
                android:src="@drawable/selector_land"/>

            <ImageView
                android:id="@+id/show_post_image_4"
                android:layout_width="@dimen/image_size_sub"
                android:layout_height="@dimen/image_size_sub"
                android:layout_below="@id/show_post_image_3"
                android:layout_toRightOf="@id/show_post_image"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/post_image"
                android:visibility="invisible"
                android:src="@drawable/selector"/>

            <TextView
                android:id="@+id/show_post_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/show_post_image_4"
                android:textSize="@dimen/show_page_text"
                android:visibility="invisible"
                android:text="@string/show_description"/>

            <Button
                android:id="@+id/show_post_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_below="@id/show_post_details"
                android:visibility="gone"
                android:text="@string/contact"/>

            <Button
                android:id="@+id/show_post_contact_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_below="@id/show_post_details"
                android:text="@string/contact_login"/>

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>