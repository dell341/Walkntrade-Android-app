<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Show_Page">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/progress_bar_margin_top"
        android:indeterminate="true"
        android:visibility="invisible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/progressBar"
        tools:context=".ShowPage">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/show_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/title_size"
                android:typeface="sans"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/image_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/show_post_title">

                <ImageView
                    android:id="@+id/show_post_image"
                    android:layout_width="@dimen/image_size_main"
                    android:layout_height="@dimen/image_size_main"

                    android:layout_marginRight="10dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/post_image"
                    android:scaleType="centerCrop"
                    android:background="@color/gray"/>

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyleInverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="invisible"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/show_post_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_layout"
                android:textSize="@dimen/price_size"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/show_post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/show_post_price"
                android:textSize="@dimen/show_page_text"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/show_post_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/show_post_price"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/show_post_date"
                android:textSize="@dimen/show_page_text"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/show_post_image_2"
                android:layout_width="@dimen/image_size_sub"
                android:layout_height="@dimen/image_size_sub"
                android:layout_below="@id/show_post_title"
                android:layout_toRightOf="@id/image_layout"
                android:adjustViewBounds="true"
                android:contentDescription="@string/post_image"
                android:scaleType="centerCrop"
                android:src="@drawable/selector"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/show_post_image_3"
                android:layout_width="@dimen/image_size_sub"
                android:layout_height="@dimen/image_size_sub"
                android:layout_below="@id/show_post_image_2"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/image_layout"
                android:adjustViewBounds="true"
                android:contentDescription="@string/post_image"
                android:scaleType="centerCrop"
                android:src="@drawable/selector_land"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/show_post_image_4"
                android:layout_width="@dimen/image_size_sub"
                android:layout_height="@dimen/image_size_sub"
                android:layout_below="@id/show_post_image_3"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/image_layout"
                android:adjustViewBounds="true"
                android:contentDescription="@string/post_image"
                android:scaleType="centerCrop"
                android:src="@drawable/selector"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/show_post_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/show_post_image_4"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/show_page_text"
                android:visibility="invisible" />

            <Button
                android:id="@+id/show_post_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/show_post_details"
                android:layout_marginTop="25dp"
                android:text="@string/contact"
                android:visibility="gone" />

            <Button
                android:id="@+id/show_post_contact_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/show_post_details"
                android:layout_marginTop="25dp"
                android:text="@string/contact_login" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
