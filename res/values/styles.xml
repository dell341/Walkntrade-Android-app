<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- All Application & Activity themes used throughout the app. Applied in AndroidManifest.xml-->

    <style name="WalkntradeTheme.Compat" parent="Theme.AppCompat.Light" >
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/walkntrade_green</item>
        <item name="android:textColor">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

    <style name="WalkntradeTheme.Overlay" parent="WalkntradeTheme.Compat">
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    
    <style name="WalkntradeTheme.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/walkntrade_green</item>
    </style>

    <!-- Dialog Theme-->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:imeOptions">flagNoFullscreen</item>
    </style>

    <!-- Theme used for the post image pop-up -->
    <style name="ImageDialogTheme" parent="android:Theme.Holo.NoActionBar">
    </style>

</resources>
