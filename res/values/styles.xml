<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- All Application & Activity themes used throughout the app. Applied in AndroidManifest.xml-->

    <style name="WalkntradeTheme" parent="android:Theme.Holo.Light" >
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>
        <item name="android:actionBarWidgetTheme">@style/WidgetTheme</item>
    </style>

    <style name="WalkntradeTheme.Overlay" parent="WalkntradeTheme">
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    
    <style name="WalkntradeTheme.NoActionBar" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:imeOptions">flagNoFullscreen</item>
    </style>

    <!-- Dialog Theme-->
    <style name="DialogTheme" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:imeOptions">flagNoFullscreen</item>
    </style>

    <!-- Theme used for the post image pop-up -->
    <style name="ImageDialogTheme" parent="android:Theme.Holo.NoActionBar">
    </style>

    <style name="WidgetTheme" parent="android:Theme.Holo">
        <item name="android:textColorHint">@color/opaque_white</item>
        <item name="android:popupMenuStyle">@android:style/Widget.Holo.Light.ListPopupWindow</item>
    </style>

</resources>
